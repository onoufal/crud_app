<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link rel="stylesheet" href="style.css" />
  </head>
  <body>
    <main>
      <section>
        <% characters.forEach(character => { %>
        <p>Name: <%= character.name %></p>
        <p>House: <%= character.house %></p>
        <p>Patronus: <%= character.patronus %></p>
        <p>Alive: <%= character.alive %></p>
        <form action="/favorite-character" method="POST">
          <input type="hidden" name="name" value="<%= character.name %>" />
          <input type="hidden" name="house" value="<%= character.house %>" />
          <input
            type="hidden"
            name="patronus"
            value="<%= character.patronus %>"
          />
          <input type="hidden" name="alive" value="<%= character.alive %>" />
          <input type="submit" value="Add to Favorite" />
        </form>
      </section>
      <% }) %>
    </main>
  </body>
</html>
